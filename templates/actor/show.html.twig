{% extends 'base.html.twig' %}

{% block body %}
<div>
    <h1>{{ actor.name }}</h1>

    <h4>Filmographie</h4>
    <ul>
        {% for program in actor.programs %}
            <li><a href="{{ path('program_show', {id: program.id}) }}">{{ program.title }}</a></li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
