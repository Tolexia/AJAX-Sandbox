{% extends 'base.html.twig' %}
{% block title %}Série #{{ program.id }}{% endblock %}

{% block body %}
    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <p>Catégorie : <a href="{{ path('category_show', {'categoryName': program.category.name}) }}">{{ program.category.name }}</a></p>
            <h2>Saisons</h2>
            <ul>
                {% for season in seasons %}
                    <li><a href="{{ path('program_season_show', {'program': program.id, 'season': season.id}) }}">Saison {{ season.number }}</a></li>
                {% endfor %}
            </ul>
            <h2>Acteurs :</h2>
            <ul>
                {% for actor in program.actors %}
                    <li><a href="{{ path('actor_show', {id: actor.id}) }}">{{ actor.name }}</a></li>
                {% else %}
                    <li>Aucun acteur pour cette série</li>
                {% endfor %}
            </ul>
            <hr>
            <a href="{{ path('program_index') }}">
                Retour à la liste des programmes
            </a>
        </div>
    </div>


{% endblock %}
