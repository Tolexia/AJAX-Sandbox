{% extends 'base.html.twig' %}

{% block title %}All categories{% endblock %}

{% block body %}
    <h1>Catégories</h1>
    <a href="{{ path('category_new') }}" class="btn btn-success">Ajouter une catégorie</a>
    {% for category in categories %}
        <div>
            <h2>{{ category.name }}</h2>
            <a href="{{ path("category_show", { categoryName: category.name }) }}">Voir les séries</a>
        </div>
    {% else %}
        Aucune catégorie trouvée.
    {% endfor %}

    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}
